<html>

<style>

body {
	padding: 10px;
	background: #eee;
}
fieldset {
	width: 320px;
	margin: 10px;
	border-radius: 5px;
}
.container {
	width: 980px;
	margin: 0 auto;
	border: 1px solid #000;
	border-radius: 5px;
	background: #fff;
	padding: 10px;
}
img {
	max-width: 300px;
	max-height: 300px;
	padding: 10px;
	border: 1px solid #aaa;
	box-shadow: 1px 1px 5px #000;
}
input {
	width: 300px;
}
li {
	list-style: none;
}
</style>
<body>
	<div class="container">
		<h1>Your Photo Index</h1>
		
		<p><%= link_to "Add New Pic", "/new" %></p>
		<ul>
			<h2>Your Pics</h2>
			<% @pictures.reverse.each do |image| %>
				<li>
					<img src="<%= image.url %>" />
					<p>
						<%= link_to "View", "/pictures/#{image.id}" %>
						<%= link_to "Delete", "/pictures/#{image.id}", :method => :delete %>
					</p>
				</li>
			<% end %>
		</ul>		
	</div>
</body>
</html>